<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/old_standard_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/old_standard_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

    <!-- italic -->
    <font
        android:font="@font/old_standard_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/old_standard_italic"
        app:fontStyle="italic"
        app:fontWeight="400"
        tools:ignore="UnusedAttribute" />

    <!-- bold -->
    <font
        android:font="@font/old_standard_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/old_standard_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        tools:ignore="UnusedAttribute" />

</font-family>